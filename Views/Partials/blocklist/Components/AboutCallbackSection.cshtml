@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using UmbracoCMS.ViewModels;
@using Umbraco.Cms.Core.Models.PublishedContent;
@using Umbraco.Extensions;
@using System.Linq;

@{
    var content = (ContentModels.AboutCallbackSection)Model.Content;
    var settings = Model.Settings as ContentModels.AboutCallbackSettings;

    const string formScope = "about-callback";
    var formViewModel = ViewData["CallbackFormModel"] as CallbackFormViewModel;
    if (formViewModel == null || !string.Equals(formViewModel.FormId, formScope, System.StringComparison.OrdinalIgnoreCase))
    {
        formViewModel = new CallbackFormViewModel { FormId = formScope };
    }
    else
    {
        formViewModel.FormId = formScope;
    }

    var successId = TempData.Peek("CallbackFormSuccess") as string;
    var successRecipient = TempData.Peek("CallbackFormRecipient") as string;
    var showSuccess = !string.IsNullOrWhiteSpace(successId) && string.Equals(successId, formScope, System.StringComparison.OrdinalIgnoreCase);

    var optionSource = new List<string> { "Business", "Financial Consulting", "Tax Planning" };

    formViewModel.Options = optionSource;

    var currentPageUrl = Context.Request.Path + Context.Request.QueryString;
}

<section class="py-28">
    <div class="max-w-7xl mx-auto px-4 flex gap-10">

        <div class="flex flex-col w-7/12">
            @if (!string.IsNullOrWhiteSpace(content.AboutCallbackSectionLabel))
            {
                <p class="text-secondary uppercase tracking-wide font-semibold mb-3">@content.AboutCallbackSectionLabel</p>
            }
            <div class="rte about-callback-rte">
                @Html.Raw(content.AboutCallbackSectionBody)
            </div>
        </div>

        <div class="flex flex-col w-5/12 shadow-md -mt-[11rem] z-[99]">
            <div class="bg-primary">
                <p class="text-accent py-[1.5rem] px-[2rem] text-[1.875rem] font-bold">
                    @content.AboutCallBackFormTitle
                </p>
            </div>
            <p class="text-sm py-[1.5rem] px-[2rem] italic">
                @content.AboutCallBackFormDescription
            </p>

            <form action="/umbraco/surface/Form/HandleCallbackForm?returnUrl=@Uri.EscapeDataString(currentPageUrl)" method="post" id="callbackForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="FormId" value="@formViewModel.FormId" />

                <div class="px-8 flex flex-col gap-6">

                    <div>
                        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>
                    </div>

                    @if (showSuccess)
                    {
                        <div class="mx-6 rounded-[14px] border border-green-200 bg-green-50 px-4 py-3 text-sm text-green-700 shadow-sm">
                            <strong class="text-green-800">Thank you@(string.IsNullOrWhiteSpace(successRecipient) ? string.Empty : $", {successRecipient}")!</strong>
                            <span class="block">We have received your request and will be in touch shortly.</span>
                        </div>
                    }

                    <div style="padding-inline: 30px;">
                        <label for="about-name" class="sr-only">Name</label>
                        @Html.TextBox("Name", formViewModel.Name, new
                        {
                            @class = "w-full p-3 italic border border-border-gray rounded-md focus:ring-2 focus:ring-primary focus:outline-none",
                            id = "about-name",
                            placeholder = "Name"
                        })
                        @Html.ValidationMessage("Name", "", new { @class = "text-red-600 text-sm" })
                    </div>

                    <div style="padding-inline: 30px;">
                        <label for="about-email" class="sr-only">Email address</label>
                        @Html.TextBox("Email", formViewModel.Email, new
                        {
                            @class = "w-full p-3 italic border border-border-gray rounded-md focus:ring-2 focus:ring-primary focus:outline-none",
                            id = "about-email",
                            placeholder = "Email address",
                            type = "email"
                        })
                        @Html.ValidationMessage("Email", "", new { @class = "text-red-600 text-sm" })
                    </div>

                    <div style="padding-inline: 30px;">
                        <label for="about-phone" class="sr-only">Phone</label>
                        @Html.TextBox("Phone", formViewModel.Phone, new
                        {
                            @class = "w-full p-3 italic border border-border-gray rounded-md focus:ring-2 focus:ring-primary focus:outline-none",
                            id = "about-phone",
                            placeholder = "Phone"
                        })
                        @Html.ValidationMessage("Phone", "", new { @class = "text-red-600 text-sm" })
                    </div>

                    <div style="padding-inline: 30px;">
                        <label for="SelectedOption" class="sr-only">Service interest</label>
                        <div class="relative">
                            <select id="SelectedOption" name="SelectedOption"
                                    class="appearance-none w-full p-3 pr-10 border border-border-gray focus:ring-2 focus:ring-primary focus:outline-none rounded-md">
                                <option value="">Please select an option</option>
                                @foreach (var option in formViewModel.Options)
                                {
                                    var isSelected = string.Equals(formViewModel.SelectedOption, option, System.StringComparison.OrdinalIgnoreCase);
                                    <option value="@option" selected="@(isSelected ? "selected" : null)">@option</option>
                                }
                            </select>

                            <span class="pointer-events-none absolute right-3 inset-y-0 flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-body-text-100" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                                </svg>
                            </span>
                        </div>
                        @Html.ValidationMessage("SelectedOption", "", new { @class = "text-red-600 text-sm" })
                    </div>

                    <div class="pb-14" style="padding: 10px 30px 40px;">
                        <button type="submit" class="form-btn">
                            Submit
                        </button>
                    </div>

                </div>
            </form>
        </div>

    </div>
</section>
